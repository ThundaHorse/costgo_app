  body {
    background-image: url("images/prism.png")
  }

  b {
    color: #5090EF;
  }

  .title {
    btn-outline-primary;
  }

  .jumbotron {
    background-image: url("images/seigaiha.png");
  }

  .card-title {
    text-align: center;
  }

  h1 {
    text-align:center;
    text-decoration: underline;
    text-decoration-color: purple;
  }

  p {
    text-align: center;
    color: #3B8CAF;
  }

  h2 {
    text-align: center;
  }


